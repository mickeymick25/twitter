<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64px64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tweets/form'%>
    </div>
  </article>


  <% @tweets.each do |tweet| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong>Andy Leverenz</strong> <br/>
            <small>@webcrunch</small> <br/>
            <p><%= tweet.tweet%></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <!-- link to the tweet -->
              <%= link_to tweet, class:"level-item" do %>
                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
              <% end %>

              <!-- Edit the tweet -->
              <%= link_to edit_tweet_path(tweet), class:"level-item" do %>
                <span class="icon"><i class="fa fa-edit" aria-hidden="true"></i></span>
              <% end %>

              <!-- Delete the tweet -->

              <%= button_to tweet, method: :delete, class:"level-item" do %>
                <span class="icon"><i class="fa fa-trash-alt" aria-hidden="true"></i></span>
              <% end %>

              <!-- <%= link_to tweet, method: :delete do %>
                <span class="icon"><i class="fa fa-trash-alt" aria-hidden="false"></i></span>
              <% end %> -->

            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>
